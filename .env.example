# Environment variables for Test Observer
# Copy this file to .env and set your own values

# Issue Tracking Integration Credentials
# These are optional - if not set, issue sync will be skipped for the corresponding platforms

# GitHub API Token
# Get from: https://github.com/settings/tokens
# Needs 'repo' scope for private repositories, or no scopes for public repositories
GITHUB_TOKEN=

# Jira Credentials  
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_USERNAME=your-email@example.com
JIRA_TOKEN=
JIRA_BASE_URL=https://warthogs.atlassian.net

# Launchpad Credentials (Optional)
# For accessing private bugs - get OAuth credentials from your Launchpad profile
# Without these, only public bugs can be accessed
LAUNCHPAD_CONSUMER_NAME=
LAUNCHPAD_OAUTH_TOKEN=
LAUNCHPAD_OAUTH_TOKEN_SECRET=

# Celery Broker (for background tasks)
# Default Redis URL for docker-compose setup
CELERY_BROKER_URL=redis://test-observer-redis:6379

# Application Version (for development)
VERSION=0.1.2